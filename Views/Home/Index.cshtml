@{
    ViewData["Title"] = "Download de Vídeo ou Áudio";
}

<!DOCTYPE html>
<html>
<head>
    <style>

        form {
            width: 60%;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="url"],
        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #5e2129;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: red ;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    </style>
</head>
<body>
    <h2>Download de Vídeo ou Áudio</h2>

    <form asp-action="Baixar" method="post">
        <label for="videoUrl">URL do Vídeo:</label>
        <input type="url" name="videoUrl" required />

        <label for="downloadDirectory">Diretório de Download:</label>
        <select name="downloadDirectory">
            <option value="BaixarVideo">Baixar Vídeo</option>
            <option value="BaixarAudio">Baixar Áudio</option>
        </select>

        <button type="submit">Baixar</button>
    </form>
</body>
</html>
